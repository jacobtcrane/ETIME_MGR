<mvc:View
	controllerName="com.transfieldservices.view.Master2"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	
	<Page
		id="master2Page"
		showNavButton="true"
		navButtonPress="onNavBack"
		title="{Ename}">
		<subHeader>
			<Bar id="master2SearchBar">
				<contentMiddle>
					<SearchField
						id="master2SearchField"
						showRefreshButton="{device>/isNoTouch}"
						placeholder="{i18n>master2SearchPlaceholder}"
						search="onSearch"
						tooltip="{i18n>master2SearchTooltip}"
						width="100%">
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<List
				id="master2List"
				items="{EmployeeViewSet}"			
				mode="{device>/listMode}"
				noDataText="{i18n>masterListNoDataText}"
				select="onSelect"
				growing="true"
				growingScrollToLoad="true">
				<items>
				<!--ToDo - Update these fields-->
					<ObjectListItem
					    id="master2ListItem"
						type="{device>/listItemType}"
						press="onSelect" 
						title="{Datetxt}" 
						number="{Hourstxt}"
						numberUnit="">
						<attributes>
							<ObjectAttribute 
								text="{HasAllowance}"/>
						</attributes>
						<firstStatus>
							<ObjectStatus
								text=""/>
						</firstStatus>
					</ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page></mvc:View>